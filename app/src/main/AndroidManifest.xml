<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhuvaneswaran.simple_api_client">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.bhuvaneswaran.simple_api_client.application.RestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bhuvaneswaran.simple_api_client.ui.about.AboutActivity"></activity>
        <activity android:name="com.bhuvaneswaran.simple_api_client.ui.settings.SettingsActivity" />
        <activity
            android:name="com.bhuvaneswaran.simple_api_client.ui.rest.RestActivity"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bhuvaneswaran.simple_api_client.ui.base.BaseActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4299310549064965~7467487323"/>

    </application>

</manifest>