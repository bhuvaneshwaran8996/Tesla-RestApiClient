<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.tesla_restapiclient.ui.rest.response.ResponseViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#303030"
        tools:context=".ui.rest.response.ResponseFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <com.example.tesla_restapiclient.controls.TextViewMedium
                            android:layout_width="wrap_content"
                            android:text="Request Code"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                        <com.example.tesla_restapiclient.controls.TextViewRegular
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_requestcode"
                            android:text="304"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <com.example.tesla_restapiclient.controls.TextViewMedium
                            android:layout_width="wrap_content"
                            android:text="Response Time(ms)"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                        <com.example.tesla_restapiclient.controls.TextViewRegular
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_responsetime"
                            android:text="304"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnr_header"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.tesla_restapiclient.controls.TextViewMedium
                        android:id="@+id/header"
                        android:layout_width="wrap_content"
                        android:text="Header"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"/>
                    <ScrollView
                        android:id="@+id/header_scroll"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.example.tesla_restapiclient.controls.TextViewRegular
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:id="@+id/header_text"
                            android:textColor="@color/white"
                            android:textAlignment="textStart"
                            android:layout_height="250dp"/>
                    </ScrollView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnr_body"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.tesla_restapiclient.controls.TextViewMedium
                        android:layout_width="wrap_content"
                        android:text="Body"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <FrameLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <com.paulvarry.jsonviewer.JsonViewer
                            android:padding="10dp"
                            android:id="@+id/body_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/bost_text"
                            android:textAlignment="textStart"

                            tools:ignore="MissingClass" />
                            <com.example.tesla_restapiclient.controls.TextViewRegular
                                android:layout_width="match_parent"
                                android:id="@+id/jsonText"
                                android:textColor="@color/orange"
                                android:padding="10dp"
                                android:layout_height="match_parent"/>

                        </FrameLayout>
                    </ScrollView>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

