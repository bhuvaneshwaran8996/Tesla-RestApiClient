<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        tools:context=".ui.header.HeaderFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bhuvaneswaran.simple_apiclient_latest.controls.TextViewRegular

                android:layout_margin="10dp"
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:text="Timeout connection"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/rly_container"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <EditText
                    android:id="@+id/timeedt"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/rly_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.bhuvaneswaran.simple_apiclient_latest.controls.TextViewMedium
                        android:layout_width="match_parent"
                        android:text="OK"
                        android:id="@+id/ok"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_margin="20dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"


                        android:background="@color/white"
                        android:layout_height="wrap_content"/>
                    <com.bhuvaneswaran.simple_apiclient_latest.controls.TextViewMedium
                        android:layout_width="match_parent"
                        android:text="Cancel"
                        android:id="@+id/cancel"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_margin="20dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </RelativeLayout>






        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
