<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        tools:context=".ui.header.HeaderFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.tesla_restapiclient.controls.TextViewRegular

                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Add Header"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/rly_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/lnr_type"
                    android:layout_width="match_parent"

                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Type"

                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatSpinner


                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lnr_key"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lnr_type"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Key"

                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp">

                        <com.example.tesla_restapiclient.controls.EditTextRegular
                            android:id="@+id/edit_key"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lnr_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lnr_key"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Value"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp">

                        <com.example.tesla_restapiclient.controls.EditTextRegular
                            android:id="@+id/edit_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout

                    android:id="@+id/lnr_username"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lnr_value"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Username"

                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp">

                        <com.example.tesla_restapiclient.controls.EditTextRegular
                            android:id="@+id/edit_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lnr_password"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lnr_username"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Password"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp">

                        <com.example.tesla_restapiclient.controls.EditTextRegular
                            android:id="@+id/edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lnr_token"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lnr_password"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewRegular
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Token"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp">

                        <com.example.tesla_restapiclient.controls.EditTextRegular
                            android:id="@+id/edit_token"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white" />
                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rly_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.example.tesla_restapiclient.controls.TextViewMedium
                        android:id="@+id/ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="OK"


                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <com.example.tesla_restapiclient.controls.TextViewMedium
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
